{
  "env": {
    "cjs": {
      "presets": [
        "@babel/preset-env"
      ]
    },

    "es": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false
          }
        ]
      ]
    },

    "test": {
      "presets": [
        "@babel/preset-env"
      ]
    }
  },

  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/plugin-proposal-class-properties"
  ]
}
